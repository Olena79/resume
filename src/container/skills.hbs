<main>
	{{#with main}}
	<div class="row">
		<div class="col-6">
			<div class="card p-4" style="width:430px;height:300px;">
				{{> title data="My skills" big=true}}

				<ul>
					{{#each skills}}
					<li>
						{{name}}
						{{#if point includeZero=true}} ({{point}}) {{/if}}

						{{#if isTop}} (top) {{/if}}

						{{#unless point includeZero=true}} (не вивчаю) {{/unless}}

						{{#unless point}}
						{{#if point includeZero=true}}
						(Зараз вивчаю)
						{{/if}}
						{{/unless}}
					</li>
					{{/each}}

				</ul>
			</div>

		</div>

		<div class="col-6">
			<div class="card p-4" style="width:430px;height:300px;">
				{{> title data="My hobbies" big=false}}
				<ol>
					{{#each hobbies}}
					<li>
						{{name}}
						{{#if isMain}} (favourite) {{/if}}
					</li>
					{{/each}}
				</ol>
			</div>

		</div>
	</div>
	{{/with}}
</main>