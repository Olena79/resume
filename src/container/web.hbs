<main class="m-3 p-3" style="color:rgb(1, 1, 82)">
    <div class="row">
        {{#with web}}
        <h1 class="text-center" style="color:rgb(78, 2, 135)">Web languages</h1>
        <div class="col-4">
            <hr>
            <br>
            <div class="card" style="width:300px;height:650px;">
                <div class="card-body">
                    {{#with languages.[0]}}
                    <div class="text-center">

                        <b>
                            <i class="fa-solid fa-code" style="color: #002057;"></i>
                            {{name}}
                        </b>
                    </div>
                    <br>
                    <br>
                    <a href="https://en.wikipedia.org/wiki/HTML5" target="_blank">
                        (<small><em>version:</em></small> {{version}})
                    </a>

                    <br>
                    <em>{{description}}</em>
                    <br>
                    <br>
                    <br>
                    <ul>
                        {{#each elements}}
                        <li>
                            <b>{{name}}</b> - <em>{{description}}</em>
                            <br>
                            <ul>
                                {{#each attributes}}
                                <li>
                                    <b>{{name}}</b> - {{description}}
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                    {{/with}}
                </div>


            </div>
        </div>
        <div class="col-4">
            <hr>
            <br>
            <div class="card" style="width:300px;height:650px;">
                <div class="card-body">
                    {{#with languages.[1]}}
                    <div class="text-center">
                        <b>
                            <i class="fa-brands fa-css3"></i>
                            {{name}}
                        </b>
                    </div>
                    <br>
                    <br>
                    <a href="https://en.wikipedia.org/wiki/CSS" target="_blank">
                        (<small><em>version:</em></small> {{version}})
                    </a>
                    <br>
                    <em>{{description}}</em>
                    <br>
                    <br>
                    <br>
                    <ul>
                        {{#each properties}}
                        <li>
                            <b>{{name}}</b> - <em>{{description}}</em>
                            <br>
                            <ul>
                                {{#each values}}
                                <li>
                                    <b>{{value}}</b> - {{description}}
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                    {{/with}}
                </div>
            </div>


        </div>
        <div class="col-4">
            <hr>
            <br>
            <div class="card" style="width:300px;height:650px;">
                <div class="card-body">
                    {{#with languages.[2]}}
                    <div class="text-center">
                        <b>
                            <i class="fa-brands fa-node-js"></i>
                            {{name}}
                        </b>
                    </div>
                    <br>
                    <br>
                    <a href="https://en.wikipedia.org/wiki/JavaScript" target="_blank">
                        (<small><em>version:</em></small> {{version}})
                    </a>
                    <br>
                    <em>{{description}}</em>
                    <br>
                    <br>
                    <br><br>
                    <ul>
                        {{#each functions}}
                        <li>
                            <b>{{name}}</b> - <em>{{description}}</em>
                            <br>
                            <ul>
                                {{#each parameters}}
                                <li>
                                    <b>{{name}}</b> ({{type}}) - {{description}}
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                    {{/with}}
                </div>
            </div>

        </div>
        {{/with}}
    </div>
</main>