<div>
    {{#with main}}
    <main>

        <div class="row">

            <div class="col-4">
                <div class="card">
                    <section>
                        {{> title data="My educations" big=true}}
                        <ul>
                            {{#each education}}
                            <li>
                                {{name}}
                                {{#unless isEnd}}
                                (ще в процессі)
                                {{/unless}}
                            </li>
                            {{/each}}
                        </ul>
                    </section>
                </div>
            </div>

            <div class="col-4">
                <div class="card">
                    <section>
                        {{> title data="My certificates" big=false}}
                        <ul>
                            {{#each certificates}}
                            <li>{{name}} ({{id}})</li>
                            {{/each}}
                        </ul>
                    </section>
                </div>

            </div>
        </div>



    </main>
    {{/with}}
</div>