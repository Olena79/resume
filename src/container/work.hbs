<div style="color:rgb(2, 2, 96)">
    {{#with main}}
    <main>
        <section>
            <div class="text-center">
                {{> title data='Work history' big=true}}
            </div>

            <div>
                <p>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>
                        <br />
                        <div>
                            {{duration.from}} -
                            {{#if duration.to}} {{duration.to}}
                            {{else}} (досі працюю)
                            {{/if}}
                        </div>
                        <br />
                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}} <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        <br />
                        <br />
                        <div>
                            <h3 class="text-center">Projects ({{projectAmount}})</h3>
                        </div>
                        <br />
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>
                                    {{> link text=name href=url blank=true noLine=true}}
                                </div>
                                <br />
                                <div>
                                    <p>{{about}}</p>
                                </div>
                                <br />
                                <div>
                                    <em>Project stacks</em> ({{stackAmount}})
                                </div>
                                <br />
                                <div>
                                    <ul>
                                        {{#each stack}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <br />
                                <div>
                                    <em>Project awards</em>
                                </div>
                                <br />
                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>

                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/each}}
                </ul>
                </p>
            </div>
        </section>

    </main>
    {{/with}}
</div>

