<main>
    <div class="card p-2 mb-5">
        <div class="row">
            <div class="col-7">
                <h2>
                    {{navigation.Logo}}
                </h2>
            </div>
            <div class="col-5">
                <div class="nav d-flex justify-content-end">
                    {{#each navigation.links}}
                    <div class="nav-item">
                        <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{href}}">
                            {{text}}
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>



    <ol class="breadcrumb">
        {{#each breadcrumb}}
        <li class="breadcrumb-item px-3">
            {{#if url}}
            <a href="{{url}}">{{name}}</a>
            {{else}}
            <p class="nav-link disabled">{{name}}</p>
            {{/if}}
        </li>
        {{/each}}
    </ol>



    <h1>{{header}}</h1>



    <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
            <label class="form-label">{{label}}</label>
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>


    <div class="row">

        <div class="col-4">
            <div class="card my-5">
                <div class="card-body">
                    {{#with filterBlock}}


                    {{#with sellers}}
                    <div class="form-check-label mb-3">
                        {{title}}
                    </div>

                    <div class="form-check">
                        {{#each list}}
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                        <br>
                        {{/each}}
                    </div>
                    {{/with}}

                    <hr class="my-3">

                    {{#with brands}}
                    <label class="form-label">{{title}}</label>
                    <input class="form-control" placeholder="{{input.placeholder}}">
                    {{/with}}


                    {{/with}}
                </div>
            </div>
        </div>


    </div>





</main>